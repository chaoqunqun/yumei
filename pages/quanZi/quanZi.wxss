/* top */
.top{
  width:100%;
  height:92rpx;
  background:#fff;
}

.topBox{
  width:558rpx;
  height:100%;
  margin:0 auto;
  overflow: hidden;
  display:flex;
  justify-content:space-between;
}

.topSon{
  display:flex;
  flex-direction:column;
  align-items:center;
}

.topSonP{
  height:24rpx;
}

.topText{
  font-size: 28rpx;
  font-weight: 400;
  color: #8894A4;
}

.hengLine{
  width: 32rpx;
  height: 6rpx;
  background: #FF5901;
  border-radius: 4rpx;
  margin-top:20rpx;
}

.activeText{
  font-size: 32rpx;
  font-weight: 500;
  color: #222B45;
}

/* showList */
.showList{
  width:690rpx;
  margin:30rpx auto;
}

.showBox{
  width: 100%;
  height: 580rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom:20rpx;
}

.showBoxSon{
  width:636rpx;
  margin:30rpx auto;
}

.showBoxTop{
  width:100%;
  height:72rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
}

.topLeft{
  width:350rpx;
  height:100%;
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.topLeftImg{
  width:72rpx;
  height:72rpx;
  border-radius:50%;
}

.topLeftText view:nth-child(1){
  width:256rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  text-overflow:ellipsis; 
  white-space:nowrap; 
  overflow:hidden; 
}

.topLeftText view:nth-child(2){
  font-size: 24rpx;
  font-weight: 400;
  color: #C4C4C4;
}

.rightImg{
  width:50rpx;
  height:50rpx;
}

.bigTitle{
  font-size:24rpx;
  font-weight: 400;
  color: #222B45;
  margin:20rpx 0;
}

.showBannerImg{
  width: 630rpx;
  height: 320rpx;
  border-radius: 20rpx;
  margin-bottom:20rpx;
}

.showBom{
  width:100%;
  display:flex;
  align-items:center;
}

.showBomSon{
  display:flex;
  align-items:center;
  margin-right:48rpx;
}

.showBomIcon{
  width:32rpx;
  height:32rpx;
}

.showBomNum{
  font-size: 12px;
  font-weight: bold;
  color: #C4C4C4;
  margin-left:6rpx;
}