.bigTop{
  width:100%;
  background:#fff;
  overflow: hidden;
}

.topBox{
  width:690rpx;
  display:flex;
  align-items:center;
  justify-content: space-between;
  margin:20rpx auto;
}

.topBoxJ{
  width:48rpx;
  height:48rpx;
}

.searchInput{
  width: 476rpx;
  height: 72rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  background: #FFFFFF;
  border-radius: 42rpx;
  border: 2rpx solid #FF5901;
  padding-left:30rpx;
}

.searchBtn{
  width: 106rpx;
  height: 72rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  background: #FF5901;
  border-radius: 42rpx;
  text-align: center;
  line-height: 72rpx;
}

/* topNav */
.topNavBox{
  width:100%;
  height:92rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
}

.topSon{
  width:150rpx;
  height:92rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
}

.topText{
  font-size: 28rpx;
  font-weight: 400;
  color: #8894A4;
  margin-top:26rpx;
}

.hengLine{
  width: 32rpx;
  height: 6rpx;
  background: #FF5901;
  border-radius: 4rpx;
  margin-top:20rpx;
}

.activeText{
  font-size: 32rpx;
  font-weight: 500;
  color: #222B45;
}

/* listShow */
.listShow{
  width:692rpx;
  margin:30rpx auto;
}

/* 列表 */
.footlist {
  width:100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top:20rpx;
  display:flex;
  justify-content:space-between;
}

.foot-left{
  width:336rpx;
}

.foot-right{
  width:336rpx;
}

.footbox {
  width:336rpx;
  margin-bottom:20rpx;
  background:#fff;
  border-radius:30rpx;
}

.footbox image {
  width:336rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.footbox .zhiBo{
  width: 76rpx;
  height: 30rpx;
  background: #ED1111;
  border-radius:14rpx;
  position:absolute;
  right:10rpx;
  bottom:20rpx;
  display:flex;
  align-items:center;
}

.lineBox{
  display:flex;
  align-items:flex-end;
  margin-left:13rpx;
}

.lineBox .line{
  width: 1px;
  background: #FFFFFF;
  margin-right:2rpx;
}

.lineBox .line:nth-child(1){
  height: 4rpx;
}

.lineBox .line:nth-child(2){
  height: 6rpx;
}

.lineBox .line:nth-child(3){
  height: 8rpx;
}

.boText{
  font-size: 20rpx;
  font-weight: 500;
  color:#fff;
}

.footbox .t1 {
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  line-height:26rpx;
  overflow: hidden;
}


.box-shadow {
  position:relative;
  background: #fff;
  padding:8rpx 16rpx 14rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.ziYing{
  width: 52rpx;
  height: 30rpx;
  font-size: 20rpx;
  font-weight: 500;
  color:#fff;
  background: #FF5901;
  border-radius: 4rpx;
  text-align:center;
  line-height:30rpx;
  position:absolute;
  top:20rpx;
  left:20rpx;
}

.footPrice{
  font-size:24rpx;
  font-weight: 600;
  color: #ED1111;
  margin-top:10rpx;
}