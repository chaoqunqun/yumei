/* top */
.top{
  position:relative;
}
.topImg{
  width:100%;
  height:360rpx;
}

.topSetBox{
  width:690rpx;
  height:68rpx;
  position:absolute;
  top:12rpx;
  left:30rpx;
  display:flex;
  align-items:center;
}

.setImg{
  width:68rpx;
  height:68rpx;
}

.setImg:nth-child(2){
  margin:0 20rpx 0 466rpx;
}

.topMyInfo{
  width:100%;
  height:100rpx;
  display:flex;
  align-items:center;
  position:absolute;
  bottom:20rpx;
}

.topMyImg{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin:0 30rpx;
}

.infoRightTop{
  width:560rpx;
  display:flex;
  align-items:center;
}

.infoRightTop:nth-child(2){
  margin-top:14rpx;
}
 
.zyBox{
  width: 52rpx;
  height: 30rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #FFFFFF;
  background: #FF5901;
  border-radius: 4rpx;
  text-align: center;
  line-height:30rpx;
  margin-right:14rpx;
}

.commonText{
  width:90%;
  text-overflow:ellipsis; 
  white-space:nowrap; 
  overflow:hidden; 
}

.shopTitle{
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.dingImg{
  width:28rpx;
  height:28rpx;
  margin-right:4rpx;
}

.addText{
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
}

/* showBody */
.showBody{
  width:692rpx;
  margin:0 auto;
}

.navBox{
  display:flex;
  justify-self: start;
  align-items: center;
  margin:24rpx 0rpx 30rpx 0;
}

.navBox view:nth-child(1){
  font-size: 28rpx;
  font-weight: 500;
  color: #222B45;
}

.navBox view:nth-child(2){
  font-size: 28rpx;
  font-weight: 400;
  color: #8894A4;
  margin-left:40rpx;
}

/* 列表 */
/* 为您推荐 */
.footlist {
  width:100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top:20rpx;
  display:flex;
  justify-content:space-between;
}

.foot-left{
  width:336rpx;
}

.foot-right{
  width:336rpx;
}

.footbox {
  width:336rpx;
  margin-bottom:20rpx;
  background:#fff;
  border-radius:30rpx;
}

.footbox image {
  width:336rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.footbox .zhiBo{
  width: 76rpx;
  height: 30rpx;
  background: #ED1111;
  border-radius:14rpx;
  position:absolute;
  right:10rpx;
  bottom:20rpx;
  display:flex;
  align-items:center;
}

.lineBox{
  display:flex;
  align-items:flex-end;
  margin-left:13rpx;
}

.lineBox .line{
  width: 1px;
  background: #FFFFFF;
  margin-right:2rpx;
}

.lineBox .line:nth-child(1){
  height: 4rpx;
}

.lineBox .line:nth-child(2){
  height: 6rpx;
}

.lineBox .line:nth-child(3){
  height: 8rpx;
}

.boText{
  font-size: 20rpx;
  font-weight: 500;
  color:#fff;
}

.footbox .t1 {
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  line-height:26rpx;
  overflow: hidden;
}


.box-shadow {
  position:relative;
  background: #fff;
  padding:8rpx 16rpx 14rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.ziYing{
  width: 52rpx;
  height: 30rpx;
  font-size: 20rpx;
  font-weight: 500;
  color:#fff;
  background: #FF5901;
  border-radius: 4rpx;
  text-align:center;
  line-height:30rpx;
  position:absolute;
  top:20rpx;
  left:20rpx;
}

.footPrice{
  font-size:24rpx;
  font-weight: 600;
  color: #ED1111;
  margin-top:10rpx;
}