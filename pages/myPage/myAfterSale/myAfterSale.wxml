    <view class="topSonP"></view>
    <view class='topText {{navIndex==0 ? "activeText" : ""}}'>申请售后</view>
    <view class="hengLine" style="display:{{navIndex==0?'block':'none'}}"></view>
  </view>

  <view class="topSon" catchtap="clickNav" data-index="1">
    <view class="topSonP"></view>
