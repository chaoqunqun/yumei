.chongDet{
  width: 100px;
  height: 60rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FF5901;
  text-align: center;
  line-height:60rpx;
  margin:30rpx 0 0 540rpx;
}

.chongBox{
  width: 576rpx;
  height: 98rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #FF5901;
  display:flex;
  align-items:center;
  justify-content: space-between;
  margin:30rpx auto;
}

.symbol{
  width:50rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #222B45;
  margin-left:34rpx;
}

.moneyInput{
  height:100%;
  width: 100%;
  margin-left:20rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #C4C4C4;
}

.tiBox{
  width:578rpx;
  margin:0 auto;
  display:flex;
  flex-direction: column;
}

.tiText{
  font-size:24rpx;
  color:#C4C4C4;
}

.tiNum{
  color:#222B45;
}

.tiSpan{
  font-size: 24rpx;
  font-weight: 400;
  color: #C4C4C4;
  margin-top:6rpx;
}

.confirm{
  width: 578rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  line-height:100rpx;
  background: #FF5901;
  box-shadow: 0px 4px 9px 0px rgba(255, 89, 1, 0.2);
  border-radius: 50rpx;
  margin:200px auto 0 auto;
}