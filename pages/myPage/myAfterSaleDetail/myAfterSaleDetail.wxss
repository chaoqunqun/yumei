.showBody{
  width:100%;
  background:#fff;
  margin-top:20rpx;
  overflow: hidden;
  position:relative;
}

.showBodyTitle{
  font-size: 28rpx;
  font-weight: 500;
  color: #222B45;
  margin:30rpx 0 0 30rpx;
}

.chartFlow{
  display:flex;
  flex-direction: column;
  align-items:center;
  margin-top:28rpx;
}

.chartFlowTop{
  display:flex;
  align-items: center;
  justify-content: space-between;
}

.yuanD{
  width: 14rpx;
  height: 14rpx;
  background: #FFFFFF;
  border: 4rpx solid #FF5901;
  border-radius:50%;
}

.hLine{
  width: 100rpx;
  height: 4rpx;
  background:#FF5901;
  margin:0 10rpx;
}

.chartFlowBom{
  width:650rpx;
  display:flex;
  align-items: center;
  justify-content: space-between;
  margin-top:10rpx;
}

.chartFlowBom view{
  font-size: 12px;
  font-weight: 400;
  color: #C4C4C4;
}

.productBox{
  width:630rpx;
  height:160rpx;
  display:flex;
  margin:40rpx 0 40rpx 30rpx;
}

.productImg{
  width:160rpx;
  height:160rpx;
  border-radius: 20rpx;
}

.productRight{
  margin-left:20rpx;
}

.productName{
  width: 370rpx;
  height: 72rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  line-height:36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow:hidden;
  -webkit-box-orient: vertical;
}

.productSpec{
  font-size: 24rpx;
  font-weight: bold;
  color: #ABA8A6;
  margin:8rpx 0;
}

.productRightBom{
  width:450rpx;
  display:flex;
  align-items: center;
  justify-content: space-between;
}

.productPrice{
  font-size: 28rpx;
  font-weight: 600;
  color: #ED1111;
}

.productNum{
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
}

.statusBox{
  display:flex;
  align-items: center;
  margin-left:30rpx;
}

.sLine{
  width: 6rpx;
  height: 24rpx;
  background: #FF5901;
  border-radius: 4rpx;
}

.status{
  font-size: 28rpx;
  font-weight: 600;
  color: #222B45;
  margin-left:20rpx;
}

/* 订单详情 */
.orderInfo{
  width: 690rpx;
  height: 472rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin:20rpx 0 150rpx 0;
  overflow: hidden;
}

.line{
  width: 6rpx;
  height: 24rpx;
  background: #FF5901;
  border-radius: 4rpx;
}

.infoTopT{
  font-size: 28rpx;
  font-weight: 600;
  color: #222B45;
  margin-left:20rpx;
}

.orderInfoDet{
  width:646rpx;
  display:flex;
  align-items: center;
  justify-content: space-between;
  margin-left:30rpx;
  margin-bottom:20rpx;
}

.infoDetBox{
  display:flex;
  align-items: center;
}

.infoDetBoxL{
  font-size: 24rpx;
  font-weight: 400;
  color: #ABA8A6;
}

.infoDetBoxR{
  font-size: 24rpx;
  font-weight: bold;
  color: #222B45;
  margin-left:20rpx;
}

.infoDetBoxROne{
  margin-left:45rpx;
}

.copyBtn{
  width: 80rpx;
  height: 40rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #FF5901;
  text-align: center;
  line-height:40rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  border: 2rpx solid #FF5901;
}

/* bomBtn */
.bomBtnBox{
  position:absolute;
  display:flex;
  align-items: center;
  left:30rpx;
  bottom:30rpx;
}

.commonBtn{
  width: 330rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  line-height:100rpx;
  border-radius: 50rpx;
}

.cacelBtn{
  background: #FFFFFF;
  color: #ABA8A6;
  border: 2rpx solid #DADADA;
}

.numBtn{
  color: #FFFFFF;
  background: #FF5901;
  box-shadow: 0px 4px 9px 0px rgba(255, 89, 1, 0.2);
  margin-left:30rpx;
}