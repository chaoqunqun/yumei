.pingBox{
  width:690rpx;
  min-height:616rpx;
  background:#fff;
  border-radius: 20rpx;
  margin:30rpx auto;
  overflow: hidden;
}

.productBox{
  height:120rpx;
  margin-left:30rpx;
  margin-top:30rpx;
  display:flex;
}

.productImg{
  width:120rpx;
  height:120rpx;
  margin-right:30rpx;
  border-radius: 20rpx;
}

.productInfo{
  margin-top:4rpx;
}

.productName{
  width: 482rpx;
  height: 72rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow:hidden;
  -webkit-box-orient: vertical;
}

.productSpec{
  font-size: 24rpx;
  font-weight: bold;
  color: #ABA8A6;
  margin-top:4rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
}

.num{
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
}

.pingInfoBox{
  display:flex;
  align-items:center;
  justify-content: space-between;
  margin:30rpx;
}

.pingInfoText{
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
}

.starBox{
  display:flex;
  align-items:center;
  margin-left:16rpx;
}

.plaseText{
  font-size: 28rpx;
  font-weight: 400;
  color: #C4C4C4;
  margin-right:6rpx;
}

.duiImg{
  width:40rpx;
  height:40rpx;
}

.pingText{
  width:632rpx;
  height:145rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #C4C4C4;
  margin:30rpx;
}

.pingImgBox{
  width:690rpx;
  display:flex;
  flex-wrap:wrap;
  margin-bottom:20rpx;
  margin-left:30rpx;
}

.upImg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-right:20rpx;
  margin-bottom:20rpx;
}

.addupImg{
  width: 158rpx;
  height: 158rpx;
  background: #F0F3F5;
  border-radius: 20rpx;
  border: 2rpx solid #DADADA;
}

/* 提交 */
.confirmBtn{
  width: 578rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  line-height:100rpx;
  color: #FFFFFF;
  background: #FF5901;
  box-shadow: 0px 4px 9px 0px rgba(255, 89, 1, 0.2);
  border-radius: 50rpx;
  position:absolute;
  left:86rpx;
  bottom:30rpx;
}