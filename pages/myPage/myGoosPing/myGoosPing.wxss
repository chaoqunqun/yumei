.addTop{
  width:100%;
  height:92rpx;
  display:flex;
  align-items: center;
  justify-content: space-between;
  background:#fff;
  margin-bottom:30rpx;
}

.topLeftImg{
  width:48rpx;
  height:48rpx;
  margin-left:30rpx;
}

.topText{
  font-size: 36rpx;
  font-weight: 600;
  color: #222B45;
}

.topRight{
  width:116rpx;
  height:100%;
  font-size: 28rpx;
  font-weight: 400;
  color: #FF5901;
  text-align: center;
  line-height:92rpx;
}


.pingBox{
  width:690rpx;
  min-height:616rpx;
  background:#fff;
  border-radius: 20rpx;
  margin:30rpx auto;
  overflow: hidden;
}

.productBox{
  height:120rpx;
  margin-left:30rpx;
  margin-top:30rpx;
  display:flex;
}

.productImg{
  width:120rpx;
  height:120rpx;
  margin-right:30rpx;
  border-radius: 20rpx;
}

.productInfo{
  margin-top:4rpx;
}

.productName{
  width: 482rpx;
  height: 72rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow:hidden;
  -webkit-box-orient: vertical;
}

.productSpec{
  font-size: 24rpx;
  font-weight: bold;
  color: #ABA8A6;
  margin-top:4rpx;
}

.pingInfoBox{
  display:flex;
  align-items:center;
  margin:30rpx;
}

.pingInfoText{
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
}

.starBox{
  display:flex;
  align-items:center;
  margin-left:16rpx;
}

.star{
  width:40rpx;
  height:40rpx;
  margin-left:8rpx;
}

.pingText{
  width:632rpx;
  height:145rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #C4C4C4;
  margin:30rpx;
}

.pingImgBox{
  width:690rpx;
  display:flex;
  flex-wrap:wrap;
  margin-bottom:20rpx;
  margin-left:30rpx;
}

.upImg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-right:20rpx;
  margin-bottom:20rpx;
}

.addupImg{
  width: 158rpx;
  height: 158rpx;
  background: #F0F3F5;
  border-radius: 20rpx;
  border: 2rpx solid #DADADA;
}