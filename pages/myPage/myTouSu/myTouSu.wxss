.showBody{
  width:100%;
  background: #FFFFFF;
  overflow: hidden;
  position:relative;
}

.productBox{
  width:690rpx;
  margin:16rpx auto 0 auto;
}

.productTop{
  display:flex;
  justify-content: space-between;
}

.productLeft{
  width:550rpx;
  display:flex;
}

.headImg{
  width: 72rpx;
  height: 72rpx;
  border-radius:50%;
  margin-right:16rpx;
}

.headName{
  width:450rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #222B45;
  text-overflow:ellipsis; 
  white-space:nowrap; 
  overflow:hidden; 
}

.headSpan{
  width:450rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #ABA8A6;
  text-overflow:ellipsis; 
  white-space:nowrap; 
  overflow:hidden; 
}

.productR{
  display:flex;
}

.guanImg{
  width:30rpx;
  height:30rpx;
  margin-right:4rpx;
}

.guanText{
  font-size: 24rpx;
  font-weight: 400;
  color: #C4C4C4;
}

.goodsExplain{
  width:100%;
  font-size: 24rpx;
  font-weight: 400;
  color: #222B45;
  margin:20rpx 0;
  text-overflow:ellipsis; 
  white-space:nowrap; 
  overflow:hidden; 
}

.goodsImgBox{
  width:100%;
  display:flex;
  flex-wrap:wrap;
}

.goodsBanner:nth-child(1){
  margin-left:0;
}

.goodsBanner:nth-child(6n){
  margin-left:0;
}

.goodsBanner{
  width:120rpx;
  height:120rpx;
  margin-left:20rpx;
  border-radius: 20rpx;
  margin-bottom:10rpx;
}

/* 投诉详细 */
.touBox{
  width: 686rpx;
  border-top: 2rpx solid #F0F3F5;
  margin-top:20rpx;
}

.touText{
  font-size: 24rpx;
  font-weight: 400;
  color: #9C9998;
  margin:20rpx 0 0 6rpx;
}

.touArea{
  width:100%;
  height:260rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #C4C4C4;
  margin-top:45rpx;
  margin-left:6rpx;
}

/* 提交 */
.confirmBtn{
  width: 578rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  line-height:100rpx;
  color: #FFFFFF;
  background: #FF5901;
  box-shadow: 0px 4px 9px 0px rgba(255, 89, 1, 0.2);
  border-radius: 50rpx;
  position:absolute;
  left:86rpx;
  bottom:30rpx;
}