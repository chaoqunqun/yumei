/* 去除横线滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* top */
.top{
  width:100%;
  height:360rpx;
  background:#FF5901;
  overflow:hidden;
  border-bottom-left-radius:100rpx;
  border-bottom-right-radius:100rpx;
}

.searchBox{
  width:690rpx;
  height:72rpx;
  background: #FFFFFF;
  border-radius: 42px;
  margin:30rpx auto 0 auto;
}

/* 轮播图 */
.swiperBox{
  width:690rpx;
  height:360rpx;
  margin:-228rpx auto 0 auto;
  border-radius:20rpx;
}

.swiperSon{
  height:360rpx;
}

.swiperSon image{
  width:100%;
  height:360rpx;
  border-radius:20rpx;
}

/* body */
.content{
  width:690rpx;
  margin:30rpx auto;
}

/* 导航 */
.goodsNav{
  margin-top:20rpx;
}

.nav {
  width:690rpx;
  overflow: hidden;
  display: flex;
  white-space: nowrap;
  margin:0 auto;
}

.navOne{
  height:192rpx;
}

.navTwo{
  height:266rpx;
}

.navThree{
  height:274rpx;
}

.navSon{
  display:inline-block;
}

.navSun{
  width:140rpx;
  height:192rpx;
  margin-right:20rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-between;
}

.navSunTwo{
  width:180rpx;
  height:266rpx;
  margin-right:20rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}

.navSunThree{
  width:380rpx;
  height:274rpx;
  margin-right:20rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  position:relative;
}

.textOne{
  font-size:28rpx;
  font-weight: 500;
  color: #222B45;
}

.textTwo{
  font-size:28rpx;
  font-weight:400;
  color: #222B45;
}

.textThree{
  font-size: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #222B45;
}

.price{
  font-size: 20rpx;
  font-weight: 600;
  color: #ED1111;
}

.saleNum{
  font-size:24rpx;
  font-weight: 400;
  color: #C4C4C4;
}

.navImg{
  width:140rpx;
  height:140rpx;
  border-radius: 20px;
}

.navImgTwo{
  width:180rpx;
  height:180rpx;
  border-radius: 20px;
}

.navImgThree{
  width:380rpx;
  height:180rpx;
  border-radius:20rpx;
}

.navThreeLogo{
  width:72rpx;
  height:72rpx;
  border-radius:50%;
  position:absolute;
  right:0;
  top:200rpx;
}

/* 专属商品 */
.zsgood{
  margin-top:40rpx;
}

.title{
  font-size: 32rpx;
  font-weight: 600;
  color: #222B45;
}

/* 为您推荐 */
.footlist {
  width:100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top:20rpx;
  display:flex;
  justify-content:space-between;
}

.footbox {
  width:160px;
  margin-bottom:20rpx;
  background:#fff;
  border-radius:30rpx;
}

.footbox image {
  width:160px;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.footbox .zhiBo{
  width: 76rpx;
  height: 30rpx;
  background: #ED1111;
  border-radius:14rpx;
  position:absolute;
  right:10rpx;
  bottom:20rpx;
  display:flex;
  align-items:center;
}

.lineBox{
  display:flex;
  align-items:flex-end;
  margin-left:13rpx;
}

.lineBox .line{
  width: 1px;
  background: #FFFFFF;
  margin-right:2rpx;
}

.lineBox .line:nth-child(1){
  height: 4rpx;
}

.lineBox .line:nth-child(2){
  height: 6rpx;
}

.lineBox .line:nth-child(3){
  height: 8rpx;
}

.boText{
  font-size: 20rpx;
  font-weight: 500;
  color:#fff;
}

.footbox .t1 {
  font-size: 28rpx;
  font-weight: 400;
  color: #222B45;
  line-height:26rpx;
  overflow: hidden;
}


.box-shadow {
  position:relative;
  background: #fff;
  padding:8rpx 16rpx 14rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.ziYing{
  width: 52rpx;
  height: 30rpx;
  font-size: 20rpx;
  font-weight: 500;
  color:#fff;
  background: #FF5901;
  border-radius: 4rpx;
  text-align:center;
  line-height:30rpx;
  position:absolute;
  top:20rpx;
  left:20rpx;
}

.footPrice{
  font-size:24rpx;
  font-weight: 600;
  color: #ED1111;
  margin-top:10rpx;
}
